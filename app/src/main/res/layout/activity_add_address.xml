<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/home_bg"
    xmlns:numberpicker="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/app_layout"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:text="ADD ADDRESS"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/_15sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:id="@+id/tv_header"
                    android:layout_height="wrap_content"/>

                <!--  <ImageView
                      android:layout_width="@dimen/_120sdp"
                      android:scaleType="centerCrop"
                      android:background="@drawable/header_logo"
                      android:layout_margin="@dimen/_15sdp"
                      android:layout_centerInParent="true"

                      android:layout_height="@dimen/_22sdp"/>
  -->




            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/app_layout"
        android:background="@drawable/background_rectangle"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"

        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"

                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_20sdp"

                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <com.app.nextgrocer.utils.TextViewRegular
                        android:layout_width="@dimen/_90sdp"
                        android:text="*First Name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#000"

                        android:textSize="@dimen/_13sdp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"

                        />

                    <com.app.nextgrocer.utils.EditTextRegular
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:hint="Enter"
                        android:inputType="textCapSentences"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#a8999f"
                        android:textColorHint="#a8999f"

                        android:id="@+id/et_fname"

                        android:background="@drawable/estimate_round"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <com.app.nextgrocer.utils.TextViewRegular
                        android:layout_width="@dimen/_90sdp"
                        android:text="*Last Name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#000"
                        android:textSize="@dimen/_13sdp"
                        android:layout_gravity="center"

                        android:layout_height="wrap_content"

                        />

                    <com.app.nextgrocer.utils.EditTextRegular
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:hint="Enter"
                        android:inputType="textCapSentences"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_11sdp"
                        android:id="@+id/et_lname"
                        android:textColor="#a8999f"
                        android:textColorHint="#a8999f"

                        android:background="@drawable/estimate_round"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <com.app.nextgrocer.utils.TextViewRegular
                        android:layout_width="@dimen/_90sdp"
                        android:text="Company"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#000"
                        android:textSize="@dimen/_13sdp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"

                        />

                    <com.app.nextgrocer.utils.EditTextRegular
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:hint="Enter"
                        android:inputType="textCapSentences"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_11sdp"
                        android:id="@+id/et_comp"
                        android:textColor="#a8999f"
                        android:textColorHint="#a8999f"

                        android:background="@drawable/estimate_round"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <com.app.nextgrocer.utils.TextViewRegular
                        android:layout_width="@dimen/_90sdp"
                        android:text="*Address 1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#000"
                        android:textSize="@dimen/_13sdp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"

                        />

                    <com.app.nextgrocer.utils.EditTextRegular
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:hint="Enter"
                        android:inputType="textCapSentences"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#a8999f"
                        android:textColorHint="#a8999f"
                        android:id="@+id/et_address1"

                        android:background="@drawable/estimate_round"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <com.app.nextgrocer.utils.TextViewRegular
                        android:layout_width="@dimen/_90sdp"
                        android:text="Address 2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#000"
                        android:textSize="@dimen/_13sdp"
                        android:layout_gravity="center"

                        android:layout_height="wrap_content"

                        />

                    <com.app.nextgrocer.utils.EditTextRegular
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:hint="Enter"
                        android:layout_gravity="center"
                        android:inputType="textCapSentences"
                        android:singleLine="true"
                        android:id="@+id/et_address2"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#a8999f"
                        android:textColorHint="#a8999f"

                        android:background="@drawable/estimate_round"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <com.app.nextgrocer.utils.TextViewRegular
                        android:layout_width="@dimen/_90sdp"
                        android:text="*City"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#000"
                        android:textSize="@dimen/_13sdp"
                        android:layout_gravity="center"

                        android:layout_height="wrap_content"

                        />

                    <com.app.nextgrocer.utils.EditTextRegular
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:hint="Enter"
                        android:layout_gravity="center"
                        android:inputType="textCapSentences"
                        android:singleLine="true"
                        android:id="@+id/et_city"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#a8999f"
                        android:textColorHint="#a8999f"

                        android:background="@drawable/estimate_round"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <com.app.nextgrocer.utils.TextViewRegular
                        android:layout_width="100dp"
                        android:text="*Country"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#000"
                        android:textSize="@dimen/_13sdp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"

                        />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:id="@+id/sp_country"

                        android:layout_gravity="center"

                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@drawable/estimate_round"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal">


                    <com.app.nextgrocer.utils.TextViewRegular
                        android:layout_width="@dimen/_90sdp"
                        android:text="*Pin Code"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#000"
                        android:textSize="@dimen/_13sdp"
                        android:layout_gravity="center"

                        android:layout_height="wrap_content"

                        />

                    <com.app.nextgrocer.utils.EditTextRegular
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:hint="Enter"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#a8999f"
                        android:textColorHint="#a8999f"
                        android:singleLine="true"
                        android:inputType="number"
                        android:id="@+id/et_pin"

                        android:background="@drawable/estimate_round"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <com.app.nextgrocer.utils.TextViewRegular
                        android:layout_width="@dimen/_90sdp"
                        android:text="*Region / State"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#000"
                        android:textSize="@dimen/_13sdp"
                        android:layout_gravity="center"

                        android:layout_height="wrap_content"

                        />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:id="@+id/sp_state"
                        android:layout_gravity="center"

                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/estimate_round"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/ll_default"
                    android:orientation="horizontal">

                    <com.app.nextgrocer.utils.TextViewRegular
                        android:layout_width="@dimen/_90sdp"
                        android:text="Default Address"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#000"
                        android:textSize="@dimen/_13sdp"
                        android:layout_gravity="center"

                        android:layout_height="wrap_content"

                        />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/rg_default"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_5sdp"
                            android:text="Yes"
                            android:id="@+id/rb_yes"
                            android:checked="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#1e1010" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:id="@+id/rb_no"

                            android:textColor="#1e1010"
                            android:paddingLeft="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            />
                    </RadioGroup>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="@dimen/_92sdp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:padding="0dp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_11sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/mix_color"
                    android:text="Add"

                    android:textColor="#fff" />



            </LinearLayout>


        </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
