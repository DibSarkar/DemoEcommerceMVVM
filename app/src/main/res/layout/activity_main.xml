<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.home.MainActivity">


    <FrameLayout
        android:id="@+id/fl_Body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_nav_view"
        android:orientation="vertical">

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_nav_view"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:id="@+id/view1"
        android:background="@color/divider"
        android:layout_height="0.5dp"/>

    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
        android:id="@+id/navView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="labeled"
        style="@style/bnve"
        app:itemHorizontalTranslationEnabled="false"
        app:itemIconTint="@drawable/bnve_color_selector"
        app:itemTextColor="@drawable/bnve_color_selector"
        app:menu="@menu/main_menu" />
    </LinearLayout>

</RelativeLayout>